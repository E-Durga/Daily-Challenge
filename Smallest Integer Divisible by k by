class Solution:
    def smallestRepunitDivByK(self, k: int) -> int:
        if k == 1:
            return 1

        seen = { 1 }
        length = 1
        remainder = 1

        while remainder != 0:            
            remainder = (remainder * 10 + 1) % k

            if remainder in seen:
                return -1

            seen.add(remainder)

            length += 1

        return length
